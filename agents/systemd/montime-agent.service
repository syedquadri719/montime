[Unit]
Description=Montime.io Monitoring Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/montime
Environment="SERVER_TOKEN=YOUR_SERVER_TOKEN_HERE"
Environment="BASE_URL=https://montime.io"
ExecStart=/usr/bin/python3 /opt/montime/agent.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=montime-agent

[Install]
WantedBy=multi-user.target
